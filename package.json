  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trsi-group/trsi.org-11ty/issues"
  },
  "homepage": "https://github.com/trsi-group/trsi.org-11ty#readme",
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@jgarber/eleventy-plugin-markdown": "^2.0.1",
    "autoprefixer": "^10.4.20",
    "bulma": "^1.0.3",
    "contentful": "^11.4.4",
    "contentful-cli": "^3.7.3",
    "contentful-export": "^7.21.44",
    "cssnano": "^7.0.6",
    "dotenv": "^16.4.7",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@11ty/eleventy-dev-server": "^2.0.8",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "vitest": "^3.2.4"
  }
}
