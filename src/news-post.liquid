---
pagination:
  data: cms.posts   # Array of posts
  size: 1           # One page per post
  alias: post       # Each item will be called 'post'
permalink: "news/{{ post.slug }}/index.html"
layout: layouts/base.liquid
title: TRSI News - {{ post.title }}
---

<section class="section">
  <div class="content">
    <h1 class="title">{{ post.title }}</h1>
    <p class="is-size-7 has-text-grey">{{ post.date }}</p>
    <div class="is-size-4">
      {{ post.body | markdown}}
    </div>
  </div>
</section>

<section class="section headline mt-5">
  <div class="content">
    <h1 class="is-size-2">Other Posts</h1>
  </div>
</section>

<section class="section">
  <div id="list-wrapper">
    {%- render "components/feed-news.liquid", feed: cms.posts, type: "posts" %}
  </div>
</section>