
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <img src="{{ card.image | replace: '/img/', '/img/card/' }}" alt="...">
              </figure>
            </div>
            <div class="card-content bounce-hover">
              <p class="subtitle is-6">{{ card.type }}</p>
              <p class="title is-4">{{ card.title }}</p>
              {%- if card.description %}<p class="">{{ card.description }}</p>{%- endif %}
              <nav class="level">
                <div class="level-left">
                  {%- if card.download_url %}
                  <div class="level-item">
                    <a class="" href="{{ card.download_url }} target="blank"">Download</a>
                  </div>
                  {%- endif %}
                  {%- if card.demozoo %}
                  <div class="level-item">
                    <a class="" href="{{ card.demozoo }}" target="blank">Demozoo</a>
                  </div>
                  {%- endif %}
                  {%- if card.youtube_url %}
                  <div class="level-item">
                    <a class="" href="{{ card.youtube_url }}" target="blank">Youtube</a>
                  </div>
                  {%- endif %}
                </div>
              </nav>
            </div>
          </div>