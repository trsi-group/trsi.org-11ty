
          <div class="card aligned-vertically">
            <div class="card-image">
              <figure class="image is-4by3">
                <img src="{{ card.image | replace: '/img/', '/img/card/' }}" alt="...">
              </figure>
            </div>
            <div class="card-content aligned-vertically bounce-hover">
              <div class="content">
                <p class="subtitle">{{ card.type }} / {{ card.platform }}</p>
                <p class="title">{{ card.title }}</p>
                <nav class="level">
                  <div class="level-item">
                    <button class="button js-modal-trigger is-outlined is-rounded" data-target="modal-overlay">Show Video + Infos</button>
                  </div>
                </nav>
              </div>
            </div>
          </div>
