
          <div class="card">
            {%- if card.image %}
            <div class="card-image">
              <figure class="image is-4by3">
                <img src="{{ card.image | replace: '/img/', '/img/card/' }}" alt="...">
              </figure>
            </div>
            {%- endif %}
            <div class="card-content aligned-vertically bounce-hover">
              <div class="content">
                <p class="subtitle">{{ card.type }} / {{ card.platform }}</p>
                <p class="title">{{ card.title }}</p>
                {%- if card.credits %}<p>Artist: {% for item in card.credits %}{{ item.name }}{%- endfor %}</p>{%- endif %}
              </div>
            </div>
          </div>