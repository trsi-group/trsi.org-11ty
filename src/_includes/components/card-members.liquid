
          <div class="card">
            {%- if card.image %}
            <div class="card-image">
              <figure class="image is-1by1">
                <img src="{{ card.card_image }}" alt="...">
              </figure>
            </div>
            {%- endif %}
            <div class="card-content members">
              <p class="title is-4">{{ card.handle }}</p>
              <p class="subtitle is-6">({{ card.member_status }})</p>
            </div>
          </div>