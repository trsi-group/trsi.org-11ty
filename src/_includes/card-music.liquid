<div class="card">
  {%- if card.image %}
  <div class="card-image">
    <figure class="image is-4by3">
      <img src="{{ card.image | replace: '/img/', '/img/card/' }}" alt="...">
    </figure>
  </div>
  {%- endif %}
  <div class="card-content">
    <p class="subtitle is-6">{{ card.type }}</p>
    <p class="title is-4">{{ card.title }}</p>
    {%- if card.description %}<p class="">{{ card.description }}</p>{%- endif %}
    {%- if card.download_url %}<a class="" href="{{ card.download_url }}">Download</a>{%- endif %}
    {%- if card.demozoo_url %}<a class="" href="{{ card.demozoo_url }}">Demozoo</a>{%- endif %}
  </div>
</div>