{%- assign items = max | default: feed.size %}
{%- assign sorted_feed = feed | sort: "release_date" | reverse %}
{%- assign sliced_feed = sorted_feed | slice: 0, items %}
{%- assign card_template = "card-" | append: type | downcase | append: ".liquid" %}
<div class="columns is-multiline">
  {%- for item in sliced_feed %}
  <div class="column is-one-third" data-type="{{ item.type | downcase }}" data-platform="{{ item.platform | downcase }}">
    {% render card_template, card: item %}
  </div>
  {%- endfor %}
</div>